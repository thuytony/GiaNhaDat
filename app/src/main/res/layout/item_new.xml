<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_main_screen">
    <ImageView
        android:id="@+id/imgNew"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/image_cover"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/imgNew">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true">
            <gianhadat.online.thuy.view.widget.FontTextView
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayText"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:custom_font="DroidSerif-Regular"
                android:text="4 phút trước" />
            <gianhadat.online.thuy.view.widget.FontTextView
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_high"
                android:textStyle="bold"
                app:custom_font="DroidSerif-Regular"
                android:text="Những tài sản thấp hơn thị trường có thể giúp tiết kiệm hàng trăm triệu đồng khi giao dịch" />
        </LinearLayout>
        <gianhadat.online.thuy.view.widget.FontTextView
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            app:custom_font="DroidSerif-Regular"
            android:text="tài chính"
            android:textAllCaps="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dp">
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>