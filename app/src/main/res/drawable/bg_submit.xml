<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#7b8f8585"/>
                    <!-- alttan gölge -->
                    <corners android:radius="600dp"/>
                </shape>
            </item>
            <item android:bottom="5px">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid
                        android:color="@color/colorCickButton"></solid>
                    <corners
                        android:radius="600dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                    <stroke
                        android:width="3px" android:color="#358f8585"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item  android:state_focused="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#7b8f8585"/>
                    <!-- alttan gölge -->
                    <corners android:radius="600dp"/>
                </shape>
            </item>
            <item android:bottom="5px">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid
                        android:color="@color/colorCickButton"></solid>
                    <corners
                        android:radius="600dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                    <stroke
                        android:width="3px" android:color="#358f8585"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#358f8585"/>
                <!-- alttan gölge -->
                <corners android:radius="600dp"/>
            </shape>
        </item>
            <item android:bottom="5px">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="#0fb5c7"
                android:endColor="#2F5E9F"
                android:angle="0" />
            <corners
                android:radius="600dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke
                android:width="3px" android:color="#358f8585"/>
        </shape>
            </item>
        </layer-list>
    </item>
</selector>